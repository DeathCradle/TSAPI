<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <LangVersion>7.3</LangVersion>
		<Company>Re-Logic &amp; The TShock Team</Company>
		<Copyright>Copyright © Re-Logic 2017</Copyright>
		<Product>Terraria</Product>
		<Title>Terraria</Title>
		<AssemblyName>TerrariaServerApi</AssemblyName>
		<RootNamespace>TerrariaApi.Server</RootNamespace>
		<AssemblyVersion>1.3.5.3</AssemblyVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LocalOTAPI Condition=" $(Configuration.Contains(LocalOTAPI)) ">true</LocalOTAPI>
		<LocalOTAPI Condition=" !$(Configuration.Contains(LocalOTAPI)) ">false</LocalOTAPI>
		<BinType Condition=" $(Configuration.StartsWith(Debug)) ">Debug</BinType>
		<BinType Condition=" $(Configuration.StartsWith(Release)) ">Release</BinType>
		<Configurations>Debug;Release;DebugLocalOTAPI;ReleaseLocalOTAPI</Configurations>
		<Platforms>AnyCPU</Platforms>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="tshock_logo.ico" />
    <None Remove="tshock_logo.png" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2020.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.1" />
    <PackageReference Include="NLog" Version="4.7.0" />
    <PackageReference Include="System.Diagnostics.PerformanceCounter" Version="4.7.0" />
    <PackageReference Include="System.IO.Packaging" Version="4.7.0" />
  </ItemGroup>
	<ItemGroup Condition=" $(LocalOTAPI) == false ">
		<PackageReference Include="Mintaka.OTAPI" Version="0.0.4" />
	</ItemGroup>
	<ItemGroup Condition=" $(LocalOTAPI) == true ">
		<Reference Include="OTAPI">
			<HintPath>$(ProjectDir)\..\TShock.Modifications.Bootstrapper\bin\$(BinType)\Output\OTAPI.dll</HintPath>
		</Reference>
	</ItemGroup>
</Project>
